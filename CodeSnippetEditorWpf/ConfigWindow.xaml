<Window x:Class="CodeSnippetEditor.ConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:r="clr-namespace:System.Windows"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="{Binding Path=[CSE.ApplicationName]}" r:ResourceKeyProvider.TextKey="CSE.ApplicationName" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <Border x:Name="ctrlWindowBorder"  BorderThickness="1">
        <Grid>
            <ComboBox x:Name="ctrlLanguageComboBox" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Center" Width="200" Height="25" Margin="0,3" IsEditable="True" DisplayMemberPath="NativeName"/>
        </Grid>
    </Border>
</Window>
